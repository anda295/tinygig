<!DOCTYPE html>
<html>

<head>

    <style>
        .company-name {
            text-align: center;
            font-size: 1.2rem;
            padding-bottom: 2rem
        }

        .job-title {
            text-align: center;
            font-size: 2.1rem;
            font-weight: 600;
            clear: both;
        }

        .job-description {
            width: 50%;
            margin: auto;
            text-align: justify;
        }

        .job-apply-btn {
            right: 10%;
            float: right;
            position: fixed;
            top: 6rem;
        }
        @media only screen and (max-device-width : 790px){
            .job-apply-btn {
                position: relative;
                clear: both;
                float: none;
                text-align: center;
                top: 1em;
                right: unset;
                bottom: 1em;
            }

            .job-description {
                width: 90%;
                margin: auto;
            }
        }

        .job-apply-btn a {
            padding-left: 2.5em;
            padding-right: 2.5em;
        }

        .job-description div, ul, span, p, h1, h2,
        h3,
        section {

            font-family: BlinkMacSystemFont, -apple-system, "Segoe UI", Roboto, Oxygen, Ubuntu, Cantarell, "Fira Sans", "Droid Sans", "Helvetica Neue", Helvetica, Arial, sans-serif !important;
        }
    </style>
    <% include ./partials/head %>

    <% include ./partials/header %>

</head>

<body class="blank">
    <section class="section">

        <div class="job-title">
            <%= job.jobTitle %>
        </div>
        <div class="company-name">
            <%= job.companyName %>
        </div>
        <div class="job-description">
            <%- job.description %>
        </div>
        <div class="job-apply-btn">
                <a href="<%= job.applyUrl %>" class="button is-warning is-medium">Apply now</a>
        </div>
    </section>
    <!-- Global site tag (gtag.js) - Google Analytics -->
    <script async src="https://www.googletagmanager.com/gtag/js?id=UA-129309672-1"></script>
    <script>
        window.dataLayer = window.dataLayer || [];
        function gtag() { dataLayer.push(arguments); }
        gtag('js', new Date());

        gtag('config', 'UA-129309672-1');
    </script>
</body>

</html>